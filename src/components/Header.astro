---
// src/components/Header.astro
---

<header class="site-header">
    <div class="header-container">
      <div class="logo-section">
        <a href="/" class="logo-link">
          <h1 class="logo">I Am That</h1>
          <span class="subtitle">Wisdom Collection</span>
        </a>
      </div>
      
      <nav class="main-nav">
        <a href="/" class="nav-link" data-current={Astro.url.pathname === '/'}>
          Reflect
        </a>
        <a href="/quotes" class="nav-link" data-current={Astro.url.pathname === '/quotes'}>
          Browse
        </a>
        <a href="/about" class="nav-link" data-current={Astro.url.pathname === '/about'}>
          About
        </a>
      </nav>
    </div>
  </header>
  
  <style>
    .site-header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(0, 0, 0, 0.1);
      z-index: 100;
      transition: all 0.3s ease;
    }
  
    .header-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  
    .logo-section {
      display: flex;
      flex-direction: column;
    }
  
    .logo-link {
      text-decoration: none;
      color: inherit;
    }
  
    .logo {
      font-family: 'Crimson Text', serif;
      font-size: 1.5rem;
      font-weight: 600;
      color: #2c2c2c;
      margin: 0;
      line-height: 1;
    }
  
    .subtitle {
      font-size: 0.7rem;
      color: #666;
      font-weight: 300;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      margin-top: 0.2rem;
    }
  
    .main-nav {
      display: flex;
      gap: 2rem;
      align-items: center;
    }
  
    .nav-link {
      text-decoration: none;
      color: #666;
      font-weight: 400;
      font-size: 0.95rem;
      padding: 0.5rem 0;
      position: relative;
      transition: color 0.3s ease;
    }
  
    .nav-link:hover {
      color: #2c2c2c;
    }
  
    .nav-link[data-current="true"] {
      color: #2c2c2c;
      font-weight: 500;
    }
  
    .nav-link[data-current="true"]::after {
      content: '';
      position: absolute;
      bottom: -0.5rem;
      left: 0;
      right: 0;
      height: 2px;
      background: #2c2c2c;
    }
  
    /* Add padding to body to account for fixed header */
    :global(body) {
      padding-top: 80px;
    }
  
    @media (max-width: 768px) {
      .header-container {
        padding: 1rem;
      }
  
      .main-nav {
        gap: 1.5rem;
      }
  
      .nav-link {
        font-size: 0.9rem;
      }
  
      .logo {
        font-size: 1.3rem;
      }
  
      .subtitle {
        font-size: 0.65rem;
      }
  
      :global(body) {
        padding-top: 70px;
      }
    }
  
    @media (max-width: 480px) {
      .header-container {
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
      }
  
      .main-nav {
        gap: 1rem;
      }
  
      :global(body) {
        padding-top: 100px;
      }
    }
  </style>