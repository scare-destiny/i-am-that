---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import QuoteViewer from '@/components/react/QuoteViewer'


const quotes = await getCollection('quotes')

const quotesData = quotes.map(quote => ({
  id: quote.id,
  data: {
    text: quote.body, // The main quote text is in the body
    theme: quote.data.theme,
    page: quote.data.page,
    difficulty: quote.data.difficulty,
    tags: quote.data.tags || [],
  }
}));
---

<Layout title="Wisdom from Nisargadatta Maharaj's I Am That" description='Collection of quotes from Sri Nisargadatta Maharaj '>
		<QuoteViewer quotes={quotesData} client:load />
</Layout>
